<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/gamePlayViewGroup"
                                             tools:context="wesley.folz.blowme.ui.GamePlayActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_arrow"
        android:id="@+id/startPuzzleButton"
        android:background="@null"
        android:onClick="onStartPuzzleButtonClicked"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/pauseButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.578"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cubeTextView"
        android:text="10"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/timerTextVIew"
        app:layout_constraintRight_toRightOf="@+id/timerTextVIew"
        app:layout_constraintLeft_toLeftOf="@+id/timerTextVIew"/>

    <TextView
        android:text="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ringTextView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageVIew2"
        app:layout_constraintRight_toRightOf="@+id/imageVIew2"
        app:layout_constraintLeft_toLeftOf="@+id/imageVIew2"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pause"
        android:id="@+id/pauseButton"
        android:background="@null"
        android:onClick="onPauseButtonClicked"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/radiobutton_on_background"
        android:id="@+id/imageView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ringTextView"
        app:layout_constraintRight_toRightOf="@+id/ringTextView"
        app:layout_constraintLeft_toLeftOf="@+id/ringTextView"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageVIew2"
        android:src="@android:drawable/checkbox_off_background"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cubeTextView"
        app:layout_constraintRight_toRightOf="@+id/cubeTextView"
        app:layout_constraintLeft_toLeftOf="@+id/cubeTextView"/>

    <TextView
        android:text="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timerTextVIew"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/pauseButton"
        app:layout_constraintRight_toRightOf="@+id/pauseButton"
        app:layout_constraintLeft_toLeftOf="@+id/pauseButton"/>

</android.support.constraint.ConstraintLayout>
